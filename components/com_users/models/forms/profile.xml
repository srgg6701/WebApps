<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="core"
		label="COM_USERS_PROFILE_DEFAULT_LABEL">

		<field name="id" type="hidden"
			filter="integer"
		/>

		<field name="name" type="text"
			description="COM_USERS_PROFILE_NAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_NAME_LABEL"
			message="COM_USERS_PROFILE_NAME_MESSAGE"
			required="true"
			size="30"
		/>

		<field name="username" type="text"
			class="validate-username"
			description="COM_USERS_DESIRED_USERNAME"
			filter="username"
			label="COM_USERS_PROFILE_USERNAME_LABEL"
			message="COM_USERS_PROFILE_USERNAME_MESSAGE"
			required="true"
			size="30"
			validate="username"
			readonly="true"
		/>

		<field name="password1" type="password"
			autocomplete="off"
			class="validate-password"
			description="COM_USERS_DESIRED_PASSWORD"
			field="password2"
			filter="raw"
			label="COM_USERS_PROFILE_PASSWORD1_LABEL"
			message="COM_USERS_PROFILE_PASSWORD1_MESSAGE"
			size="30"
			validate="equals"
		/>

		<field name="password2" type="password"
			autocomplete="off"
			class="validate-password"
			description="COM_USERS_PROFILE_PASSWORD2_DESC"
			filter="raw"
			label="COM_USERS_PROFILE_PASSWORD2_LABEL"
			message="COM_USERS_PROFILE_PASSWORD2_MESSAGE"
			size="30"
		/>

		<field name="email1" type="email"
			description="COM_USERS_PROFILE_EMAIL1_DESC"
			filter="string"
			label="COM_USERS_PROFILE_EMAIL1_LABEL"
			message="COM_USERS_PROFILE_EMAIL1_MESSAGE"
			required="true"
			size="30"
			unique="true"
			validate="email"
		/>

		<field name="email2" type="email"
			description="COM_USERS_PROFILE_EMAIL2_DESC"
			field="email1"
			filter="string"
			label="COM_USERS_PROFILE_EMAIL2_LABEL"
			message="COM_USERS_PROFILE_EMAIL2_MESSAGE"
			required="true"
			size="30"
			validate="equals"
		/>
	</fieldset>
	
	<fieldset name="extra"
		label="COM_USERS_PROFILE_EXTRA_LABEL">
		
		<field name="surname" type="text"
			description="COM_USERS_PROFILE_SURNAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_SURNAME_LABEL"
			message="COM_USERS_PROFILE_SURNAME_MESSAGE"
			required="false"
			size="30"
		/>

		<field name="middle_name" type="text"
			description="COM_USERS_PROFILE_MIDDLE_NAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_MIDDLE_NAME_LABEL"
			message="COM_USERS_PROFILE_MIDDLE_NAME_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="sex" type="radio"
			description="COM_USERS_PROFILE_SEX_DESC"
			label="COM_USERS_PROFILE_SEX_LABEL"
			message="COM_USERS_PROFILE_SEX_MESSAGE"
			required="false"
			size="30">
				<option value="m">Мужской</option>
    			<option value="f">Женский</option>
		</field>
		
		<field name="birthday" type="text"
			description="COM_USERS_PROFILE_BIRTHDAY_DESC"
			filter="string"
			label="COM_USERS_PROFILE_BIRTHDAY_LABEL"
			message="COM_USERS_PROFILE_BIRTHDAY_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="work_phone" type="text"
			description="COM_USERS_PROFILE_WORK_PHONE_DESC"
			filter="string"
			label="COM_USERS_PROFILE_WORK_PHONE_LABEL"
			message="COM_USERS_PROFILE_WORK_PHONE_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="mobila" type="text"
			description="COM_USERS_PROFILE_MOBILA_DESC"
			filter="string"
			label="COM_USERS_PROFILE_MOBILA_LABEL"
			message="COM_USERS_PROFILE_MOBILA_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="skype" type="text"
			description="COM_USERS_PROFILE_SKYPE_DESC"
			filter="string"
			label="COM_USERS_PROFILE_SKYPE_LABEL"
			message="COM_USERS_PROFILE_SKYPE_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="company_name" type="text"
			description="COM_USERS_PROFILE_COMPANY_NAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_COMPANY_NAME_LABEL"
			message="COM_USERS_PROFILE_COMPANY_NAME_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="city" type="text"
			description="COM_USERS_PROFILE_CITY_DESC"
			filter="string"
			label="COM_USERS_PROFILE_CITY_LABEL"
			message="COM_USERS_PROFILE_CITY_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="region" type="text"
			description="COM_USERS_PROFILE_REGION_DESC"
			filter="string"
			label="COM_USERS_PROFILE_REGION_LABEL"
			message="COM_USERS_PROFILE_REGION_MESSAGE"
			required="false"
			size="30"
		/>
		
		<field name="zip_code" type="text"
			description="COM_USERS_PROFILE_ZIP_CODE_DESC"
			filter="string"
			label="COM_USERS_PROFILE_ZIP_CODE_LABEL"
			message="COM_USERS_PROFILE_ZIP_CODE_MESSAGE"
			required="false"
			size="30"
		/>
		
	</fieldset>
</form>